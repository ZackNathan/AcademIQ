{
    "name": "AcademIQ",
    "action": {
        "default_popup": "index.html",
        "default_icon" : {
        "16": "logo16.png",
        "32": "logo32.png",
        "128": "logo.png"
     }
     },
    "manifest_version": 3,
    "version": "0.2",
    "description": "Suggests relevant academic articles based on webpage content",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["innertext.js"]
      }
    ]
}
